---
const { href, as = "a", disabled = false } = Astro.props;
const base = "inline-flex items-center justify-center rounded-xl px-6 py-3 font-medium transition";
const enabled = "bg-health-accent hover:bg-health-accent-dark text-white";
const off = "bg-gray-200 text-gray-400 cursor-not-allowed";
const cls = `${base} ${disabled ? off : enabled}`;
---
{as === "a" ? (
  <a href={href} class={cls} aria-disabled={disabled}><slot /></a>
) : (
  <button class={cls} disabled={disabled}><slot /></button>
)}
